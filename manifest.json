{
    "manifest_version": 3,
    "name": "Copy as Unidesk Link",
    "version": "1.0",
    "description": "Copies the selected text formatted as a Unidesk short link.",
    "permissions": ["contextMenus", "clipboardWrite", "activeTab", "scripting", "notifications"],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["https://*.unidesk.ac.uk/*"],
    "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }